<Window x:Class="NelayanGo.PetaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NELAYAN GO - Maps" Height="700" Width="1200"
        Background="#F0F0F0">

    <Window.Resources>
        <!-- Style untuk efek bayangan sederhana -->
        <DropShadowEffect x:Key="ShadowDepth1" BlurRadius="5" ShadowDepth="2" Direction="270" Opacity="0.1"/>

        <!-- Style untuk Tombol Peta (Zoom, Expand) -->
        <Style TargetType="Button" x:Key="MapButton">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- 0: Header -->
            <RowDefinition Height="*"/>
            <!-- 1: Konten Utama (Peta) -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#0361A0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="N" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="NELAYAN GO" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Navigasi -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock Text="Home" Foreground="White" VerticalAlignment="Center" Margin="20,0,20,0"/>
                <TextBlock Text="Hasil Tangkapan" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock Text="Maps" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock Text="Harga Pasar" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

            <!-- Info Pengguna -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,2"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FIKRI HOIRUL" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="TGL-32" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- === KONTEN UTAMA (ROW 1 - PETA) === -->
        <Grid Grid.Row="1">
            <!-- Peta Placeholder (Menggunakan Grid Background untuk simulasi) -->
            <Grid x:Name="MapContainer" Background="LightGray">

                <!-- Peta Statis (Simulasi Visual - Ganti dengan gambar/kontrol peta nyata jika tersedia) -->
                <Image Source="https://placehold.co/1200x640/599e82/white?text=PETA+AREA+NELAYAN" 
                       Stretch="UniformToFill" 
                       Opacity="0.8"/>

                <!-- Elemen Peta -->
                <Canvas>

                    <!-- PIN LOKASI NELAYAN (Merah) -->
                    <!-- Simulasikan pin di sekitar posisi: (500, 350) -->
                    <StackPanel Canvas.Left="500" Canvas.Top="350" HorizontalAlignment="Center">
                        <!-- Icon Pin Merah -->
                        <TextBlock Text="📍" FontSize="30" Foreground="#E53935"/>
                        <!-- Popup Cuaca -->
                        <Border Background="White" CornerRadius="5" Padding="10" Margin="0,-35,0,0" Effect="{StaticResource ShadowDepth1}">
                            <StackPanel>
                                <TextBlock Text="Cuaca 27 Celsius" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="Berawan" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- PIN TITIK TUJUAN (Biru) -->
                    <!-- Simulasikan pin di sekitar posisi: (900, 300) -->
                    <StackPanel Canvas.Left="900" Canvas.Top="300" HorizontalAlignment="Center">
                        <!-- Icon Pin Biru -->
                        <TextBlock Text="📍" FontSize="30" Foreground="#42A5F5"/>
                        <!-- Popup Titik Tujuan -->
                        <Border Background="White" CornerRadius="5" Padding="10" Margin="0,-35,0,0" Effect="{StaticResource ShadowDepth1}">
                            <TextBlock Text="Titik Tujuan" FontWeight="Bold" FontSize="14"/>
                        </Border>
                    </StackPanel>

                    <!-- UI Kontrol Peta (Kiri Atas) -->
                    <!-- PERBAIKAN: Menggunakan Border untuk Padding dan membungkus StackPanel -->
                    <Border Canvas.Left="20" Canvas.Top="20" Background="White" CornerRadius="5" Effect="{StaticResource ShadowDepth1}" Padding="5">
                        <StackPanel>
                            <Button Style="{StaticResource MapButton}" Content=""/>
                            <!-- Expand -->
                            <Button Style="{StaticResource MapButton}" Content="➕"/>
                            <!-- Zoom In -->
                            <Button Style="{StaticResource MapButton}" Content="➖"/>
                            <!-- Zoom Out -->
                            <Button Style="{StaticResource MapButton}" Content="🔍"/>
                            <!-- Search/Locate -->
                        </StackPanel>
                    </Border>
                </Canvas>
            </Grid>
        </Grid>
    </Grid>
</Window>