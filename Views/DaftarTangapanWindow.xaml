<Window x:Class="NelayanGo.DaftarTangapanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels;assembly=NelayanGo"
        mc:Ignorable="d"
        Title="NELAYAN GO - Daftar Tangkapan Hari Ini" Height="700" Width="1200"
        Background="#F0F0F0">

    <Window.DataContext>
        <!-- Membutuhkan ViewModel untuk data tabel -->
        <vm:DaftarTangapanViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Style untuk efek bayangan sederhana -->
        <DropShadowEffect x:Key="ShadowDepth1" BlurRadius="5" ShadowDepth="2" Direction="270" Opacity="0.1"/>

        <!-- Style untuk Header DataGrid -->
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E6F2FF"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Style untuk Cell DataGrid (Perbaikan Trigger) -->
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C2E0FF"/>
                    <Setter Property="Foreground" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Gaya Tombol Khusus untuk "INPUT TANGKAPAN" (Perbaikan CornerRadius) -->
        <Style x:Key="InputButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#42A5F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8" Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- 0: Header -->
            <RowDefinition Height="*"/>
            <!-- 1: Konten Utama -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#0361A0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="N" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="NELAYAN GO" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Navigasi -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name ="HomeLink" Cursor="Hand" MouseLeftButtonDown="HomeLink_MouseLeftButtonDown" Text="Home" Foreground="White" VerticalAlignment="Center" Margin="20,0,20,0"/>
                <TextBlock x:Name="HasilTangkapanLink" Cursor="Hand" MouseLeftButtonDown="HasilTangkapanLink_MouseLeftButtonDown" Text="Hasil Tangkapan" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock x:Name="MapsLink" Cursor="Hand" MouseLeftButtonDown="MapsLink_MouseLeftButtonDown" Text="Maps" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name ="HargaPasarLink" Cursor="Hand" MouseLeftButtonDown ="HargaPasarLink_MouseLeftButtonDown" Text="Harga Pasar" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

            <!-- Info Pengguna -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <!-- Ikon Profil Placeholder -->
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,2"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FIKRI HOIRUL" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="TGL-32" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- === KONTEN UTAMA (ROW 1) === -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Judul dan Tombol -->
                <RowDefinition Height="*"/>
                <!-- Tabel Data -->
            </Grid.RowDefinitions>

            <!-- Judul dan Tombol Input -->
            <Grid Grid.Row="0" Margin="0,10,0,20">
                <TextBlock Text="TANGKAPAN HARI INI" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#333"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>

                <!-- Tombol INPUT TANGKAPAN -->
                <Button Content="INPUT TANGKAPAN" 
                        Style="{StaticResource InputButton}"
                        HorizontalAlignment="Right"
                        Click="InputTangapanButton_Click"/>
            </Grid>

            <!-- Tabel Data Tangkapan -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Effect="{StaticResource ShadowDepth1}">
                <DataGrid ItemsSource="{Binding TangkapanList}"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#eee"
                          BorderThickness="0">
                    <DataGrid.Columns>
                        <!-- ID -->
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="Auto"/>
                        <!-- Jam Tangkap -->
                        <DataGridTextColumn Header="JAM TANGKAP" Binding="{Binding JamTangkap}" Width="Auto"/>
                        <!-- Tanggal Tangkap -->
                        <DataGridTextColumn Header="TANGGAL TANGKAP" Binding="{Binding TanggalTangkap}" Width="Auto"/>
                        <!-- Nama Ikan -->
                        <DataGridTextColumn Header="NAMA IKAN" Binding="{Binding NamaIkan}" Width="Auto"/>
                        <!-- Berat Ikan (KG) -->
                        <DataGridTextColumn Header="BERAT IKAN (KG)" Binding="{Binding BeratKg}" Width="Auto"/>
                        <!-- Lokasi -->
                        <DataGridTextColumn Header="LOKASI" Binding="{Binding Lokasi}" Width="*"/>
                        <!-- Jam Input -->
                        <DataGridTextColumn Header="JAM INPUT" Binding="{Binding JamInput}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>