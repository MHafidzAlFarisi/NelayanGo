<Window x:Class="NelayanGo.Views.AdminHargaIkanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels"
        mc:Ignorable="d"
        Title="NELAYAN GO - Harga Ikan" Height="700" Width="1200"
        Background="#2B2B2B">

    <!-- Provide the ViewModel so code-behind can cast DataContext -->
    <Window.DataContext>
        <vm:AdminHargaIkanViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowDepth1"
                          BlurRadius="5"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.1"/>
        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="#E6F2FF"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
        <Style TargetType="{x:Type DataGridCell}">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#C2E0FF"/>
                    <Setter Property="Foreground" Value="#333"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="AdminButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#0B3C82">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="20,0,0,0">

                <!-- Logo pakai image -->
                <Border Width="40" Height="40"
            CornerRadius="12"
            Background="White"
            Margin="0,0,10,0">
                    <Image Source="/image/logo_real.jpg"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                </Border>

                <!-- Tulisan NELAYAN GO -->
                <TextBlock Text="NELAYAN GO"
               FontFamily="Segoe UI"
               Foreground="White"
               FontSize="20"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>
            </StackPanel>


            <StackPanel Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20,0,0,0">
                <TextBlock Text="Harga Ikan"
                   Foreground="White"
                   FontFamily="Segoe UI"
                   FontSize="15"
                   FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Cursor="Hand" MouseLeftButtonDown="ProfileHeader_Click" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentNelayan.Nama}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Admin" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1"
              Background="#E0E0E0"
              Margin="0">
            <Grid Margin="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="260"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Harga Ikan"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,15"/>

                <Border Grid.Row="1" Grid.Column="0"
                        Background="White"
                        CornerRadius="10"
                        Effect="{StaticResource ShadowDepth1}">
                    <DataGrid x:Name="dgHargaIkan" ItemsSource="{Binding DaftarHarga}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              GridLinesVisibility="Horizontal"
                              HorizontalGridLinesBrush="#EEE"
                              BorderThickness="0"
                              SelectedItem="{Binding SelectedHarga}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID"
                                                Binding="{Binding KodeIkan}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Terakhir Update"
                                                Binding="{Binding TanggalUpdate, StringFormat=dd-MM-yyyy}"
                                                Width="*"/>
                            <DataGridTextColumn Header="NAMA IKAN"
                                                Binding="{Binding NamaIkan}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Harga Ikan (per KG)"
                                                Binding="{Binding HargaIkan, StringFormat=Rp {0:N0}}"
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <StackPanel Grid.Row="1" Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Top">

                    <TextBlock Text="Search"
                               FontSize="14"
                               Margin="0,0,0,4"
                               Foreground="#333"/>
                    <Border Background="White"
                            CornerRadius="18"
                            Padding="8,4"
                            Margin="0,0,0,20">
                        <DockPanel>
                            <TextBlock Text="🔍"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="SearchTextBox"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     TextChanged="SearchTextBox_TextChanged"/>
                        </DockPanel>
                    </Border>

                    <Button Content="INPUT HARGA"
                            Background="#2F7DF6"
                            Style="{StaticResource AdminButton}"
                            Margin="0,0,0,10"
                            Click="InputHargaButton_Click"/>

                    <Button Content="UPDATE HARGA"
                            Background="#F6E62F"
                            Foreground="Black"
                            Style="{StaticResource AdminButton}"
                            Margin="0,0,0,10"
                            Click="UpdateHargaButton_Click"/>

                    <Button Content="DELETE HARGA"
                            Background="#F52B2B"
                            Style="{StaticResource AdminButton}"
                            Click="DeleteHargaButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>