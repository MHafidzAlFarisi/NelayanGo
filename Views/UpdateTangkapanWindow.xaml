<Window x:Class="NelayanGo.Views.UpdateTangkapanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NELAYAN GO - Update Tangkapan"
        Height="700" Width="1200"
        Background="#F0F0F0">

    <Window.Resources>
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style TargetType="TextBox" x:Key="InputField">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#1E88E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect x:Key="ShadowDepth1"
                          BlurRadius="5"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.1"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- KONTEN -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- FORM KIRI -->
            <Grid Grid.Column="0" Margin="0,0,30,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="10"
                        Padding="30"
                        Effect="{StaticResource ShadowDepth1}">
                    <StackPanel>
                        <TextBlock Text="UPDATE TANGKAPAN"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0,0,0,20"/>

                        <!-- Nama Ikan + suggestion -->
                        <TextBlock Style="{StaticResource InputLabel}" Text="Nama Ikan *"/>

                        <StackPanel>
                            <TextBox x:Name="txtNamaIkan"
                                     Style="{StaticResource InputField}"
                                     TextChanged="txtNamaIkan_TextChanged"/>

                            <ListBox x:Name="lbNamaIkanSuggest"
                                     Visibility="Collapsed"
                                     MaxHeight="150"
                                     Margin="0,2,0,0"
                                     MouseDoubleClick="lbNamaIkanSuggest_MouseDoubleClick">
                                <ListBox.BorderBrush>
                                    <SolidColorBrush Color="#DDDDDD"/>
                                </ListBox.BorderBrush>
                                <ListBox.BorderThickness>
                                    <Thickness>1</Thickness>
                                </ListBox.BorderThickness>
                            </ListBox>
                        </StackPanel>

                        <!-- Berat -->
                        <TextBlock Style="{StaticResource InputLabel}" Text="Berat Ikan (kg) *"/>
                        <TextBox x:Name="txtBeratKg"
                                 Style="{StaticResource InputField}"/>

                        <!-- Jam -->
                        <TextBlock Style="{StaticResource InputLabel}" Text="Jam Tangkap (jj:mm atau jj.mm) *"/>
                        <TextBox x:Name="txtJam"
                                 Style="{StaticResource InputField}"/>

                        <!-- Tanggal -->
                        <TextBlock Style="{StaticResource InputLabel}" Text="Tanggal Tangkap (hh/bb/tttt) *"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <DatePicker x:Name="dpTanggal"
                                        Grid.Column="0"
                                        Margin="0"
                                        Padding="10,8"
                                        BorderBrush="#ddd"
                                        BorderThickness="1"
                                        Background="White"/>

                            <TextBlock
                                       FontSize="20"
                                       VerticalAlignment="Top"
                                       Margin="753,4,8,0"
                                       Cursor="Hand" 
                                       MouseLeftButtonDown="IconTanggal_Click"/>
                        </Grid>

                        <!-- Lokasi -->
                        <TextBlock Style="{StaticResource InputLabel}" Text="Lokasi (Koordinat) *"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtLokasi"
                                         Grid.Column="0"
                                         Style="{StaticResource InputField}"/>

                                <TextBlock
                                       Text="📍"
                                       FontSize="20"
                                       VerticalAlignment="Center"
                                       Margin="753,4,8,0"
                                       Cursor="Hand"
                                       MouseLeftButtonDown="IconLokasi_Click"/>
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Tombol -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,20,0,0">
                    <Button Content="BATAL"
                            Width="150"
                            Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Background="#E53935"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnBatal_Click"/>

                    <Button Content="SIMPAN"
                            Width="150"
                            Height="45"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Margin="20,0,0,0"
                            Background="#42A5F5"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnSimpan_Click"/>
                </StackPanel>
            </Grid>

            <!-- JAM KANAN (boleh sama kayak input) -->
            <Border Grid.Column="1"
                    Width="200"
                    Height="100"
                    CornerRadius="10"
                    Background="White"
                    Padding="15"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
                <StackPanel>
                    <TextBlock x:Name="TimeTextBlock"
                               Text="--:--:--"
                               FontSize="30"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#333"/>

                    <TextBlock x:Name="DateTextBlock"
                               Text="--/--/----"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="#666"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
