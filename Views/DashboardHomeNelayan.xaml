<Window x:Class="NelayanGo.Views.DashboardHomeNelayan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NELAYAN GO - Dashboard Nelayan"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0" Background="#0361A0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0">
                <Border Width="40" Height="40"
                        CornerRadius="8"
                        Background="#0361A0"
                        Margin="0,0,10,0">
                    <Image Source="/image/logo_real.jpg"
                           Stretch="Uniform"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>
                <TextBlock Text="NELAYAN GO"
                           Foreground="White"
                           FontSize="20"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Title tengah -->
            <TextBlock Grid.Column="1"
                       Text="Dashboard Nelayan (Dummy)"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="20,0,0,0"/>

            <!-- Profil kanan (dummy) -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,20,0">
                <Border CornerRadius="50"
                        Width="30" Height="30"
                        Background="White"
                        VerticalAlignment="Center"
                        Margin="0,0,10,0">
                    <TextBlock Text="👤"
                               FontSize="18"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,0,2"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="NELAYAN"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="ROLE: USER"
                               Foreground="White"
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- KONTEN -->
        <Grid Grid.Row="1" Margin="30">
            <Border Background="White"
                    CornerRadius="10"
                    Padding="30">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Dashboard Nelayan (Dummy)"
                               FontSize="24"
                               FontWeight="Bold"
                               Margin="0,0,0,10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Login berhasil sebagai NELAYAN."
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="Tutup Dashboard"
                                Width="160" Height="40"
                                Click="CloseButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
