<Window x:Class="NelayanGo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NelayanGo"
        xmlns:ViewModels="clr-namespace:NelayanGo.ViewModels"
        xmlns:Views="clr-namespace:NelayanGo.Views"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels;assembly=NelayanGo"
        mc:Ignorable="d"
        Title="NELAYAN GO" Height="700" Width="1000" MinWidth="800" MinHeight="600">

    <Window.DataContext>
        <ViewModels:ViewModelsNelayan/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header fixed height -->
            <RowDefinition Height="*"/>
            <!-- Content fills remaining space -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#1C6BCC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- Logo section -->
                <ColumnDefinition/>
                <!-- Spacer -->
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="286.213"/>
                <!-- Navigation links -->
                <ColumnDefinition Width="Auto" MinWidth="0.187"/>
                <!-- Profile section -->
            </Grid.ColumnDefinitions>

            <!-- Logo Section -->
            <StackPanel Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="20,0,0,0">

                <!-- Logo pakai image -->
                <Border Width="40" Height="40"
            CornerRadius="12"
            Background="White"
            Margin="0,0,10,0">
                    <Image Source="/image/logo_real.jpg"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                </Border>

                <!-- Tulisan NELAYAN GO -->
                <TextBlock Text="NELAYAN GO"
               FontFamily="Segoe UI"
               Foreground="White"
               FontSize="20"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>
            </StackPanel>


            <!-- Navigation Links -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0" Height="16" Grid.ColumnSpan="2">
                <TextBlock x:Name="HomeLink" Text="Home" FontFamily="{DynamicResource nunito}" Foreground="White" 
                           Margin="0,0,30,0" Cursor="Hand" MouseLeftButtonDown="HomeLink_MouseLeftButtonDown"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="LogoutLink" Text="Logout" FontFamily="{DynamicResource nunito}" Foreground="White" 
                           Cursor="Hand" MouseLeftButtonDown="LogoutLink_MouseLeftButtonDown"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Profile Section -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" Margin="74,0,0,0" Width="206">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                </Border>
                <StackPanel VerticalAlignment="Center" Cursor="Hand" MouseLeftButtonDown="ProfileHeader_Click">
                    <TextBlock Text="{Binding CurrentNelayan.Nama}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Nelayan" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- === KONTEN UTAMA (ROW 1) === -->
        <!-- Use ScrollViewer to handle content overflow on small screens -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <!-- Left Panel (Photo) -->
                    <ColumnDefinition Width="20"/>
                    <!-- Spacing -->
                    <ColumnDefinition Width="*"/>
                    <!-- Right Panel (Details & Info) -->
                </Grid.ColumnDefinitions>

                <!-- Kiri: FOTO PROFIL -->
                <StackPanel Grid.Column="0">
                    <Border Height="200" Width="200" Background="#F0F0F0" 
                            CornerRadius="10" BorderBrush="LightGray" BorderThickness="1" 
                            HorizontalAlignment="Center" VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Kanan: DATA LENGKAP & INFO -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title Data Lengkap -->
                        <RowDefinition Height="Auto"/>
                        <!-- Data Table -->
                        <RowDefinition Height="30"/>
                        <!-- Spacing -->
                        <RowDefinition Height="Auto"/>
                        <!-- Title Info -->
                        <RowDefinition Height="Auto"/>
                        <!-- Info Cards -->
                    </Grid.RowDefinitions>

                    <!-- Title Data Lengkap -->
                    <Border Grid.Row="0" Background="#1C6BCC" CornerRadius="5,5,0,0" Padding="10">
                        <TextBlock Text="DATA LENGKAP" Foreground="White" FontFamily="{DynamicResource nunito}" 
                                   FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                    </Border>

                    <!-- Data Table -->
                    <Border Grid.Row="1" Background="#E6F2FF" CornerRadius="0,0,5,5" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="160"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- We use an ItemsControl or simple StackPanel for rows to avoid repetitive Grid defs -->
                            <StackPanel Grid.ColumnSpan="3">
                                <!-- Helper Style for Rows -->
                                <StackPanel.Resources>
                                    <Style TargetType="Grid">
                                        <Setter Property="Margin" Value="0,0,0,8"/>
                                    </Style>
                                    <Style x:Key="LabelStyle" TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Width" Value="160"/>
                                    </Style>
                                    <Style x:Key="SeparatorStyle" TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                        <Setter Property="Width" Value="20"/>
                                        <Setter Property="Text" Value=":"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                    <Style x:Key="ValueStyle" TargetType="TextBlock">
                                        <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <!-- Crucial for long text -->
                                    </Style>
                                </StackPanel.Resources>

                                <!-- Row 1: Nama -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Nama" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.Nama}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 2: Wilayah -->
                                <Grid Background="White">
                                    <!-- Alternating background manually applied or via converter -->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Wilayah" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.Wilayah}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 3: Tahun Bergabung -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Tahun Bergabung" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.TahunBergabung}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 4: Status -->
                                <Grid Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.Status}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 5: NIK -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="NIK" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.NIK}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 6: Tanggal Lahir -->
                                <Grid Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Tanggal Lahir" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.TanggalLahir}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 7: Tempat Lahir -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Tempat Lahir" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.TempatLahir}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 8: Alamat KTP -->
                                <Grid Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Alamat KTP" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.AlamatKTP}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 9: Nomor Telepon -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Nomor Telepon" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.NomorTelepon}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 10: Agama -->
                                <Grid Background="White">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Agama" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.Agama}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>

                                <!-- Row 11: Golongan Darah -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Golongan Darah" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                    <TextBlock Text="{Binding CurrentNelayan.GolonganDarah}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                                </Grid>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>