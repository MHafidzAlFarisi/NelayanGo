<Window x:Class="NelayanGo.Views.InputHargaIkanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NELAYAN GO - Input Harga Ikan" Height="700" Width="1200"
        Background="#2B2B2B">

    <Window.Resources>
        <!-- Label di atas input -->
        <Style TargetType="TextBlock" x:Key="InputLabel">
            <Setter Property="Margin" Value="0,15,0,5"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- TextBox dengan CornerRadius -->
        <Style TargetType="{x:Type TextBox}" x:Key="InputField">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#ddd"
                                BorderThickness="1"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="False"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="border"
                                        Property="BorderBrush"
                                        Value="#1E88E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Efek bayangan kartu -->
        <DropShadowEffect x:Key="ShadowDepth1"
                          BlurRadius="5"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.1"/>

        <!-- Style tombol merah / biru (dipakai di bawah) -->
        <Style x:Key="RedButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C62828"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BlueButton" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#42A5F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Konten -->
        </Grid.RowDefinitions>

        <!-- ===== KONTEN ===== -->
        <Grid Background="#E0E0E0" Grid.RowSpan="2">
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Width="600">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="80"/>
                </Grid.RowDefinitions>

                <!-- KARTU FORM -->
                <Border Grid.Row="0"
                        Background="White"
                        CornerRadius="10"
                        Padding="40"
                        Effect="{StaticResource ShadowDepth1}">
                    <StackPanel>
                        <TextBlock Text="INPUT HARGA IKAN"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0,0,0,20"/>

                        <!-- Nama Ikan -->
                        <TextBlock Style="{StaticResource InputLabel}"
                                   Text="Nama Ikan *"/>
                        <TextBox x:Name="txtNamaIkan"
                                 Style="{StaticResource InputField}"/>

                        <!-- Harga Ikan -->
                        <TextBlock Style="{StaticResource InputLabel}"
                                   Text="Harga Ikan (Rp/Kg) *"/>
                        <TextBox x:Name="txtHargaIkan"
                                 Style="{StaticResource InputField}"/>
                    </StackPanel>
                </Border>

                <!-- TOMBOL BAWAH -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button Content="BATAL"
                            Width="150" Height="45"
                            Style="{StaticResource RedButton}"
                            Click="BtnBatal_Click"/>
                    <Button Content="KIRIM"
                            Width="150" Height="45"
                            Margin="20,0,0,0"
                            Style="{StaticResource BlueButton}"
                            Click="BtnSimpan_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>