<Window x:Class="NelayanGo.Views.InputDataNelayanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="NELAYAN GO - Input Data Nelayan"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Style untuk Label Form -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <!-- Fallback font jika Nunito tidak ada -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Style untuk Container Input (Sama seperti Register) -->
        <Style x:Key="InputContainer" TargetType="Border">
            <Setter Property="Background" Value="#E0F2FF"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#40666666"/>
            <Setter Property="Height" Value="38"/>
        </Style>

        <!-- Style untuk TextBox -->
        <Style x:Key="FormInput" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#222"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- BACKGROUND FOTO PANTAI -->
        <Grid.Background>
            <ImageBrush ImageSource="/image/bg.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <!-- LAPISAN BIRU TRANSPARAN -->
        <Rectangle Fill="#8800479B" />

        <!-- DEKORASI LINGKARAN -->
        <Ellipse Width="900" Height="900" Fill="#403C76C3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-350,-450,0,0" />
        <Ellipse Width="700" Height="700" Fill="#403C76C3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,-250,-250" />

        <!-- KARTU INPUT -->
        <Border Width="500" Height="620"
                CornerRadius="20"
                BorderThickness="1"
                BorderBrush="#40000000"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F5FAFF" Offset="0" />
                    <GradientStop Color="#FFFFFF" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid Margin="30,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- Scrollable Form -->
                    <RowDefinition Height="Auto"/>
                    <!-- Buttons -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15" HorizontalAlignment="Center">
                    <TextBlock Text="INPUT DATA NELAYAN"
                               FontSize="22" FontWeight="Bold" Foreground="#0B3C82"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Lengkapi data diri nelayan di bawah ini"
                               FontSize="12" Foreground="#666"
                               HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <!-- FORM SCROLLABLE -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>
                        <!-- 1. Nama -->
                        <TextBlock Text="Nama Lengkap" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtNama" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- Kode Identik (DIHAPUS) -->

                        <!-- 3. Wilayah -->
                        <TextBlock Text="Wilayah" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtWilayah" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- (Tahun Bergabung & Status OTOMATIS, TIDAK TAMPIL) -->

                        <!-- 6. NIK -->
                        <TextBlock Text="NIK" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtNIK" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- 7. Tanggal Lahir -->
                        <TextBlock Text="Tanggal Lahir" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <DatePicker x:Name="dpTanggalLahir" BorderThickness="0" VerticalContentAlignment="Center" Background="Transparent"/>
                        </Border>

                        <!-- 8. Tempat Lahir -->
                        <TextBlock Text="Tempat Lahir" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtTempatLahir" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- 9. Alamat KTP -->
                        <TextBlock Text="Alamat KTP" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}" Height="60">
                            <TextBox x:Name="txtAlamat" Style="{StaticResource FormInput}" TextWrapping="Wrap" VerticalContentAlignment="Top" Padding="10,5"/>
                        </Border>

                        <!-- 10. Nomor Telepon -->
                        <TextBlock Text="Nomor Telepon" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtNoTelp" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- 11. Agama -->
                        <TextBlock Text="Agama" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <TextBox x:Name="txtAgama" Style="{StaticResource FormInput}"/>
                        </Border>

                        <!-- 12. Golongan Darah -->
                        <TextBlock Text="Golongan Darah" Style="{StaticResource FormLabel}"/>
                        <Border Style="{StaticResource InputContainer}">
                            <ComboBox x:Name="cmbGoldar" BorderThickness="0" Background="Transparent" Padding="10,8" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="A"/>
                                <ComboBoxItem Content="B"/>
                                <ComboBoxItem Content="AB"/>
                                <ComboBoxItem Content="O"/>
                                <ComboBoxItem Content="-"/>
                            </ComboBox>
                        </Border>

                        <!-- Email (DIHAPUS) -->

                        <!-- Spacing bawah agar tidak mepet -->
                        <Border Height="20"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- FOOTER BUTTONS -->
                <Grid Grid.Row="2" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tombol Batal -->
                    <Button Content="Batal"
                            Height="40" Margin="0,0,5,0"
                            Background="#FFEBEE" Foreground="#D32F2F"
                            FontWeight="SemiBold" BorderThickness="0"
                            Click="BatalButton_Click"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Tombol Simpan -->
                    <Button Grid.Column="1" Content="Simpan Data"
                            Height="40" Margin="5,0,0,0"
                            Foreground="White"
                            FontWeight="SemiBold" BorderThickness="0"
                            Click="SimpanButton_Click"
                            Cursor="Hand">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#24437B" Offset="0" />
                                <GradientStop Color="#062552" Offset="1" />
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="20">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>