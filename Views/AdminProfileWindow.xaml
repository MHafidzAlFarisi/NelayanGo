<Window x:Class="NelayanGo.Views.AdminProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels"
        mc:Ignorable="d"
        Title="NELAYAN GO - Profil Admin"
        Height="700" Width="1200"
        Background="#E0E0E0">

    <Window.DataContext>
        <vm:ViewModelsNelayan/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Bayangan kartu -->
        <DropShadowEffect x:Key="ShadowDepth1"
                                  BlurRadius="5"
                                  ShadowDepth="2"
                                  Direction="270"
                                  Opacity="0.1"/>

        <!-- Style untuk label kolom kiri -->
        <Style x:Key="ProfileLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>

        <!-- Style untuk nilai kolom kanan -->
        <Style x:Key="ProfileValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#111"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Style angka besar di bagian INFO -->
        <Style x:Key="InfoNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#222"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Label di bagian INFO -->
        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <!-- header -->
            <RowDefinition Height="*"/>
            <!-- konten -->
        </Grid.RowDefinitions>

        <!-- ================= HEADER ADMIN (SAMA STYLE DENGAN AdminHargaIkan) ================= -->
        <Grid Grid.Row="0" Background="#0B3C82">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>

            <!-- LOGO: kotak + N + tulisan NELAYAN GO -->
            <StackPanel Grid.Column="0"
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Margin="20,0,0,0">

                <!-- Logo pakai image -->
                <Border Width="40" Height="40"
            CornerRadius="12"
            Background="White"
            Margin="0,0,10,0">
                    <Image Source="/image/logo_real.jpg"
               Stretch="Uniform"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
                </Border>

                <!-- Tulisan NELAYAN GO -->
                <TextBlock Text="NELAYAN GO"
               FontFamily="Segoe UI"
               Foreground="White"
               FontSize="20"
               FontWeight="SemiBold"
               VerticalAlignment="Center"/>
            </StackPanel>

            <!-- NAV tengah: tulis 'Harga Ikan' dan 'Profil Admin' (rata kiri) -->
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="20,0,0,0">
                <TextBlock x:Name="HargaIkanLink" Cursor="Hand" MouseLeftButtonDown="HargaIkanLink_MouseLeftButtonDown" Text="Harga Ikan" Foreground="White" VerticalAlignment="Center" Margin="20,0,20,0"/>
                <TextBlock x:Name="LogOutLink" Cursor="Hand" MouseLeftButtonDown="LogOutLink_MouseLeftButtonDown" Text="Log Out" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

            <!-- Info Pengguna -->
            <StackPanel Cursor="Hand" MouseLeftButtonDown="ProfileHeader_Click" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentNelayan.Nama}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Admin" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- ================= KONTEN PROFIL ADMIN ================= -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!-- profil + data -->
                <RowDefinition Height="220"/>
                <!-- info bawah -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <!-- foto -->
                <ColumnDefinition Width="*"/>
                <!-- data lengkap -->
            </Grid.ColumnDefinitions>

            <!-- Kiri: FOTO PROFIL -->
            <StackPanel Grid.Column="0">
                <Border Height="200" Width="200" Background="#F0F0F0" 
                            CornerRadius="10" BorderBrush="LightGray" BorderThickness="1" 
                            />
            </StackPanel>

            <!-- Kanan: DATA LENGKAP & INFO -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title Data Lengkap -->
                    <RowDefinition Height="Auto"/>
                    <!-- Data Table -->
                    <RowDefinition Height="30"/>
                    <!-- Spacing -->
                    <RowDefinition Height="Auto"/>
                    <!-- Title Info -->
                    <RowDefinition Height="Auto"/>
                    <!-- Info Cards -->
                </Grid.RowDefinitions>

                <!-- Title Data Lengkap -->
                <Border Grid.Row="0" Background="#0B3C82" CornerRadius="5,5,0,0" Padding="10">
                    <TextBlock Text="DATA LENGKAP" Foreground="White" FontFamily="{DynamicResource nunito}" 
                                   FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                </Border>

                <!-- Data Table -->
                <Border Grid.Row="1" Background="#E6F2FF" CornerRadius="0,0,5,5" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- We use an ItemsControl or simple StackPanel for rows to avoid repetitive Grid defs -->
                        <StackPanel Grid.ColumnSpan="3">
                            <!-- Helper Style for Rows -->
                            <StackPanel.Resources>
                                <Style TargetType="Grid">
                                    <Setter Property="Margin" Value="0,0,0,8"/>
                                </Style>
                                <Style x:Key="LabelStyle" TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="Width" Value="160"/>
                                </Style>
                                <Style x:Key="SeparatorStyle" TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                    <Setter Property="Width" Value="20"/>
                                    <Setter Property="Text" Value=":"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                                <Style x:Key="ValueStyle" TargetType="TextBlock">
                                    <Setter Property="FontFamily" Value="{DynamicResource nunito}"/>
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                    <!-- Crucial for long text -->
                                </Style>
                            </StackPanel.Resources>

                            <!-- Row 1: Nama -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Nama" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.Nama}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 2: Wilayah -->
                            <Grid Background="White">
                                <!-- Alternating background manually applied or via converter -->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Wilayah" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.Wilayah}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 3: Tahun Bergabung -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tahun Bergabung" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.TahunBergabung}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 4: Status -->
                            <Grid Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.Status}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 5: NIK -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="NIK" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.NIK}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 6: Tanggal Lahir -->
                            <Grid Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tanggal Lahir" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.TanggalLahir}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 7: Tempat Lahir -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Tempat Lahir" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.TempatLahir}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 8: Alamat KTP -->
                            <Grid Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Alamat KTP" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.AlamatKTP}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 9: Nomor Telepon -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Nomor Telepon" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.NomorTelepon}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 10: Agama -->
                            <Grid Background="White">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Agama" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.Agama}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>

                            <!-- Row 11: Golongan Darah -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Golongan Darah" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Style="{StaticResource SeparatorStyle}" Grid.Column="1"/>
                                <TextBlock Text="{Binding CurrentNelayan.GolonganDarah}" Style="{StaticResource ValueStyle}" Grid.Column="2"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
