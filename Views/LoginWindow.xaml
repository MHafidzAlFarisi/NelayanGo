<Window x:Class="NelayanGo.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NelayanGo.Views"
        xmlns:conv="clr-namespace:NelayanGo.Converters"
        mc:Ignorable="d"
        Title="Login - NELAYAN GO" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False" 
        WindowStyle="SingleBorderWindow" 
        Background="LightGray">

    <Window.Resources>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

    </Window.Resources>
    
    <Border CornerRadius="10" Background="Transparent">
        <Grid>

            <Grid Background="#50FFFFFF">
                <Border Width="300" Height="463" 
                        CornerRadius="15" Padding="25"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel Margin="0,0,0,-19">
                        <TextBlock Text="NELAYAN GO" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,5,0,5"/>
                        <TextBlock Text="Halo!" FontSize="28" FontWeight="Bold" Margin="0,10,0,30" HorizontalAlignment="Center"/>

                        <TextBlock Text="Email" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="5" Height="30" Margin="0,0,0,15"/>

                        <TextBlock Text="Password" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBoxControl" Padding="5" Height="30" Margin="0,0,0,20"/>

                        <Button x:Name="LoginButton"
                                Content="Login" 
                                Click="LoginButton_Click"
                                Height="35" 
                                Background="#0361A0"  
                                IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBooleanConverter}}"/> 
                        <TextBlock Foreground="White" Margin="0,0,0,10" />
                        <Button Content="G Sign In With Google" 
                                Command="{Binding GoogleLoginCommand}"
                                Height="35" 
                                IsEnabled="{Binding IsLoggingIn, Converter={StaticResource InverseBooleanConverter}}"
                                Background="#DB4437" Foreground="White" Margin="0,0,0,20" Click="Button_Click"/> 
                        <TextBlock Text="{Binding StatusMessage}"/>
                        <TextBlock Text="or" HorizontalAlignment="Center" Foreground="Gray" Margin="0,5,0,5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Belum punya akun?" Foreground="Gray"/>
                            <TextBlock Text=" Daftar" Cursor="Hand" Foreground="#0361A0" FontWeight="Bold" MouseLeftButtonDown="DaftarLink_MouseLeftButtonDown"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>