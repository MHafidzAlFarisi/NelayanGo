<Window x:Class="NelayanGo.Views.AnalisisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="NELAYAN GO - Analisis Data" Height="900" Width="1200"
        Background="#F0F0F0">

    <Window.DataContext>
        <vm:AnalisisViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- Style untuk efek bayangan sederhana -->
        <DropShadowEffect x:Key="ShadowDepth1" BlurRadius="5" ShadowDepth="2" Direction="270" Opacity="0.1"/>

        <!-- Style untuk Judul Kartu -->
        <Style TargetType="{x:Type TextBlock}" x:Key="CardTitle">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Style untuk Simulasi Label Sumbu X/Y Kecil -->
        <Style TargetType="{x:Type TextBlock}" x:Key="AxisLabel">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#777"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
        </Style>

        <!-- Style Tombol Biru -->
        <Style TargetType="{x:Type Button}" x:Key="BlueButton">
            <Setter Property="Background" Value="#42A5F5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- 0: Header -->
            <RowDefinition Height="*"/>
            <!-- 1: Konten Utama -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#0361A0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="N" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="NELAYAN GO" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>

            <!-- Navigasi -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="HomeLink" Cursor="Hand" MouseLeftButtonDown="HomeLink_MouseLeftButtonDown" Text="Home" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="20,0,20,0"/>
                <TextBlock x:Name="HasilTangkapanLink" Cursor="Hand" MouseLeftButtonDown="HasilTangkapanLink_MouseLeftButtonDown" Text="Hasil Tangkapan" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name="MapsLink" Cursor="Hand" MouseLeftButtonDown="MapsLink_MouseLeftButtonDown" Text="Maps" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name="HargaPasarLink" Cursor="Hand" MouseLeftButtonDown="HargaPasarLink_MouseLeftButtonDown" Text="Harga Pasar" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name="LogOutLink" Cursor="Hand" MouseLeftButtonDown="LogOutLink_MouseLeftButtonDown" Text="Log Out" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>

            <!-- Info Pengguna -->
            <StackPanel Cursor="Hand" MouseLeftButtonDown="ProfileHeader_Click" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="ðŸ‘¤" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentNelayan.Nama}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="Nelayan" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- === KONTEN UTAMA (ROW 1) === -->
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- Kolom Kiri: Tangkapan Harian & Tahunan -->
                <ColumnDefinition Width="400"/>
                <!-- Kolom Kanan: Profit & Jenis Tangkapan -->
            </Grid.ColumnDefinitions>

            <!-- ============================== -->
            <!-- KIRI: GRAFIK HARIAN & TAHUNAN -->
            <!-- ============================== -->
            <Grid Grid.Column="0" Margin="0,10,30,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="300"/>
                    <!-- Tangkapan Hari Ini -->
                    <RowDefinition Height="*"/>
                    <!-- Tangkapan Setahun -->
                </Grid.RowDefinitions>

                <!-- KARTU 1: TANGKAPAN HARI INI -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowDepth1}" Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <!-- Grafik -->
                            <ColumnDefinition Width="2*"/>
                            <!-- Statistik -->
                        </Grid.ColumnDefinitions>

                        <!-- Judul + Grafik -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="TANGKAPAN HARI INI" Style="{StaticResource CardTitle}"/>
                            <oxy:PlotView Model="{Binding PlotHarian}" Height="200"/>
                        </StackPanel>

                        <!-- Statistik Harian -->
                        <StackPanel Grid.Column="1" Margin="10,40,0,0">
                            <TextBlock Text="{Binding StatsHarian}" FontSize="12" LineHeight="18" TextWrapping="Wrap"/>
                            <Button Content="HASIL TANGKAPAN"
                                    Style="{StaticResource BlueButton}"
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Center"
                                    Click="Button_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- KARTU 2: TANGKAPAN SETAHUN -->
                <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowDepth1}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <!-- Grafik -->
                            <ColumnDefinition Width="2*"/>
                            <!-- Statistik -->
                        </Grid.ColumnDefinitions>

                    <!-- Judul + Grafik -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="TANGKAPAN SETAHUN" Style="{StaticResource CardTitle}"/>
                        <oxy:PlotView Model="{Binding PlotTahunan}" Height="220"/>
                    </StackPanel>

                    <!-- Statistik Tahunan -->
                    <StackPanel Grid.Column="1" Margin="10,40,0,0">
                        <TextBlock Text="{Binding StatsTahunan}" FontSize="12" LineHeight="18" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
                </Border>
            </Grid>

            <!-- ============================== -->
            <!-- KANAN: PROFIT & JENIS TANGKAPAN -->
            <!-- ============================== -->
            <StackPanel Grid.Column="1" Margin="30,10,0,10">
                <!-- KARTU 3: PROFIT HARIAN -->
                <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowDepth1}" Margin="0,0,0,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" FontSize="18" FontWeight="SemiBold" Text="Profit Harian : "/>
                        <TextBlock Grid.Column="0" FontSize="18" FontWeight="Bold" Margin="120,0,0,0" Text="{Binding ProfitHarian, StringFormat=Rp. {0:N0}}"/>
                        <TextBlock x:Name="Detail" Cursor="Hand" MouseLeftButtonDown="HargaPasarLink_MouseLeftButtonDown" Grid.Column="1" Text="detail" FontSize="12" Foreground="#42A5F5" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                    </Grid>
                </Border>

                <!-- KARTU 4: JENIS TANGKAPAN TERBANYAK -->
                <Border Background="White" CornerRadius="10" Padding="20" Effect="{StaticResource ShadowDepth1}">
                    <StackPanel>
                        <TextBlock Text="JENIS TANGKAPAN TERBANYAK" Style="{StaticResource CardTitle}"/>
                        <oxy:PlotView Model="{Binding PlotJenis}" Height="220"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
