<Window x:Class="NelayanGo.Views.DaftarTangkapanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels"
        mc:Ignorable="d"
        Title="NELAYAN GO - Daftar Tangkapan"
        Height="700" Width="1100"
        Background="#E0E0E0">

    <Window.DataContext>
        <vm:DaftarTangkapanViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Konten -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#0361A0">
            <!-- ... (Header Code sama seperti sebelumnya, disingkat agar fokus ke konten) ... -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="N" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,5,0"/>
                <TextBlock Text="NELAYAN GO" FontFamily="Segoe UI" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="HomeLink" Cursor="Hand" MouseLeftButtonDown="HomeLink_MouseLeftButtonDown" Text="Home" Foreground="White" VerticalAlignment="Center" Margin="20,0,20,0"/>
                <TextBlock x:Name="HasilTangkapanLink" Cursor="Hand" MouseLeftButtonDown="HasilTangkapanLink_MouseLeftButtonDown" Text="Hasil Tangkapan" Foreground="White" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock x:Name="MapsLink" Cursor="Hand" MouseLeftButtonDown="MapsLink_MouseLeftButtonDown" Text="Maps" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name="HargaPasarLink" Cursor="Hand" MouseLeftButtonDown="HargaPasarLink_MouseLeftButtonDown" Text="Harga Pasar" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
                <TextBlock x:Name="LogOutLink" Cursor="Hand" MouseLeftButtonDown="LogOutLink_MouseLeftButtonDown" Text="Log Out" Foreground="White" VerticalAlignment="Center" Margin="0,0,20,0"/>
            </StackPanel>
            <!-- Info Pengguna -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Border CornerRadius="50" Width="30" Height="30" Background="White" VerticalAlignment="Center" Margin="0,0,10,0">
                    <TextBlock Text="👤" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,4"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="FIKRI HOIRUL" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="TGL-32" Foreground="White" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- =================== KONTEN =================== -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <!-- kiri: search + tombol -->
                <ColumnDefinition Width="*"/>
                <!-- kanan: tabel -->
            </Grid.ColumnDefinitions>

            <!-- PANEL KIRI: Search + Tombol vertikal -->
            <StackPanel Grid.Column="0"
                        Margin="0,0,15,0">
                <!-- Search label -->
                <TextBlock Text="Search"
                           Margin="0,0,0,5"/>

                <!-- Search box dengan icon -->
                <Grid Height="36">
                    <Border Background="White"
                            CornerRadius="18">
                        <TextBox x:Name="SearchTextBox"
                                 Margin="25,0,10,0"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 Background="Transparent"
                                 TextChanged="SearchTextBox_TextChanged"/>
                    </Border>

                    <!-- icon kaca pembesar -->
                    <TextBlock Text="🔍"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="8,0,215,0"/>
                </Grid>

                <!-- Spasi kecil -->
                <Border Height="10" Background="Transparent"/>

                <!-- Tombol vertikal -->
                <Button Content="INPUT TANGKAPAN"
                        Height="40"
                        Margin="0,5,0,0"
                        Background="#4285F4"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="InputTangkapanButton_Click"/>

                <Button Content="UPDATE TANGKAPAN"
                        Height="40"
                        Margin="0,5,0,0"
                        Background="#FFEB3B"
                        Foreground="Black"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="UpdateTangkapanButton_Click"/>

                <Button Content="DELETE TANGKAPAN"
                        Height="40"
                        Margin="0,5,0,0"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Click="DeleteTangkapanButton_Click"/>
            </StackPanel>

            <!-- PANEL KANAN: TABEL -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8">
                <DataGrid x:Name="dgTangkapan"
                          ItemsSource="{Binding DaftarTangkapan}"
                          SelectedItem="{Binding SelectedTangkapan}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          Margin="5" SelectionChanged="dgTangkapan_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kode"
                                            Binding="{Binding kodetangkapan}"
                                            Width="80"/>
                        <DataGridTextColumn Header="Tanggal Input"
                                            Binding="{Binding TanggalInput, StringFormat=dd-MM-yyyy}"
                                            Width="120"/>
                        <DataGridTextColumn Header="Nama Ikan"
                                            Binding="{Binding NamaIkan}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Lokasi"
                                            Binding="{Binding Lokasi}"
                                            Width="*"/>
                        <DataGridTextColumn Header="Waktu Tangkapan"
                                            Binding="{Binding JamTangkap, StringFormat=dd-MM-yyyy HH:mm}"
                                            Width="150"/>
                        <DataGridTextColumn Header="Berat (Kg)"
                                            Binding="{Binding BeratKg}"
                                            Width="90"/>
                        <DataGridTextColumn Header="Total Harga"
                                            Binding="{Binding TotalHargaIkan, StringFormat=Rp {0:N0}}"
                                            Width="140"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>
