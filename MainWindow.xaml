<Window x:Class="NelayanGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NelayanGo"
        xmlns:vm="clr-namespace:NelayanGo.ViewModels"
        mc:Ignorable="d"
        Title="NELAYAN GO" Height="700" Width="1000">
    <Window.DataContext>
        <vm:ViewModelsNelayan/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- 0: Header -->
            <RowDefinition Height="*"/>
            <!-- 1: Konten Utama -->
        </Grid.RowDefinitions>

        <!-- === HEADER (ROW 0) === -->
        <Grid Grid.Row="0" Background="#1C6BCC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="273"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="364"/>
            </Grid.ColumnDefinitions>
            <Grid Margin="10,13,90,0" VerticalAlignment="Top" Height="40">
                <Image Source="image/logo.jpg" Height="30" Margin="-14,0,104,0" VerticalAlignment="Top" Grid.Column="0"/>
                <TextBlock Text="NELAYAN GO" Grid.Column="0" FontFamily="{StaticResource nunito}" Foreground="White" 
                    VerticalAlignment="Top" Margin="55,1,-15,0" 
                    FontSize="20" FontWeight="Bold" Height="28"/>
            </Grid>
            <TextBlock Text="Home" FontFamily="{StaticResource ResourceKey=nunito}" Foreground="White" Margin="335,20,355,20" Grid.Column="1" Grid.ColumnSpan="2"/>
            <TextBlock Text="Logout" FontFamily="{StaticResource nunito}" Foreground="White" Margin="57,21,250,23" Grid.Column="2"/>
            <!-- Binding ke Model Nelayan di dalam ViewModel -->
            <TextBlock Text="{Binding CurrentNelayan.Nama}" Background="Red" Foreground="White" FontSize="14" Grid.Column="2" Margin="189,10,7,33"/>
            <TextBlock Text="{Binding CurrentNelayan.KodeIdentik}" Background="Blue" Foreground="White" FontSize="12" Grid.Column="2" Margin="189,29,7,12" />
            <Image Source="image/profilbiru.png" Height="30" Margin="26,18,85,12" Grid.Column="2"/>
        </Grid>

        <!-- === KONTEN UTAMA (ROW 1) === -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Kiri: FOTO PROFIL (Placeholder) -->
            <Border Grid.Column="0" Height="200" Width="200" Background="#F0F0F0" 
                    CornerRadius="10" VerticalAlignment="Top" BorderBrush="LightGray" BorderThickness="1" Margin="25,18,25,0">
                <TextBlock Text="Foto Profil" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="DATA LENGKAP" Background ="#1C6BCC" Foreground="White" FontFamily="{StaticResource nunito}" FontSize="18" FontWeight="Bold" Margin="22,2,516,558" Grid.Column="1" TextAlignment="Center"/>
            <Grid Background="#E6F2FF" Margin="22,26,22,222" Grid.Column="1" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ... Lanjutkan semua 13 binding data pribadi ... -->

                <!-- Definisikan Row untuk 13 data -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- BARIS 0: Nama -->
                <TextBlock Grid.Row="0" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Nama"/>
                <TextBlock Grid.Row="0" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="0" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.Nama}" FontWeight="SemiBold" FontFamily="pack://application:,,,/Resource/Nunito/static/#Nunito"/>

                <!-- BARIS 1: Kode Identik -->
                <TextBlock Grid.Row="1" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Kode Identik"/>
                <TextBlock Grid.Row="1" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="1" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.KodeIdentik}"/>

                <!-- BARIS 2: Wilayah -->
                <TextBlock Grid.Row="2" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Wilayah"/>
                <TextBlock Grid.Row="2" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="2" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.Wilayah}"/>

                <!-- BARIS 3 : Tahun Bergabung-->
                <TextBlock Grid.Row="3" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Tahun Bergabung"/>
                <TextBlock Grid.Row="3" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="3" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.TahunBergabung}"/>

                <!--Baris 4 : Status-->
                <TextBlock Grid.Row="4" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Status"/>
                <TextBlock Grid.Row="4" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="4" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.Status}"/>



                <!-- BARIS 5: NIK -->
                <TextBlock Grid.Row="5" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="NIK"/>
                <TextBlock Grid.Row="5" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="5" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.NIK}"/>

                <!-- BARIS 6: Tanggal Lahir -->
                <TextBlock Grid.Row="6" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Tanggal Lahir"/>
                <TextBlock Grid.Row="6" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="6" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.TanggalLahir}"/>

                <!-- BARIS 7: Tempat Lahir -->
                <TextBlock Grid.Row="7" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Tempat Lahir"/>
                <TextBlock Grid.Row="7" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="7" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.TempatLahir}"/>

                <!--BARIS 8: Alamat KTP-->
                <TextBlock Grid.Row="8" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Alamat KTP"/>
                <TextBlock Grid.Row="8" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="8" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.AlamatKTP}"/>

                <!--BARIS 9: Nomor Telepon-->
                <TextBlock Grid.Row="9" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Nomor Telepon"/>
                <TextBlock Grid.Row="9" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="9" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.NomorTelepon}"/>

                <!--BARIS 10: AGAMA-->
                <TextBlock Grid.Row="10" FontFamily="{StaticResource nunito}"  Padding="5" Grid.Column="0" Text="Agama"/>
                <TextBlock Grid.Row="10" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="10" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.Agama}"/>

                <!--BARIS 11: Golongan Darah-->
                <TextBlock Grid.Row="11" Background="White" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Golongan Darah"/>
                <TextBlock Grid.Row="11" Background="White" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="11" Background="White"  FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.GolonganDarah}"/>

                <!--BARIS 12: Email-->
                <TextBlock Grid.Row="12" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="0" Text="Email"/>
                <TextBlock Grid.Row="12" FontFamily="{StaticResource nunito}" Grid.Column="1" Text=":"/>
                <TextBlock Grid.Row="12" FontFamily="{StaticResource nunito}" Padding="5" Grid.Column="2" Text="{Binding CurrentNelayan.Email}"/>


            </Grid>
            <Grid Grid.ColumnSpan="2" Margin="25,382,15,10">
                <Border
                    Margin="0,0,0,138" CornerRadius="10, 10, 0, 0" Background="#1C6BCC">
                    <TextBlock
                        Width="920" VerticalAlignment="Center" Text="INFO" TextAlignment="Center" Padding="10, 5, 10, 10" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" FontFamily="{StaticResource nunito}" Foreground="White" Grid.ColumnSpan="2"/>


                </Border>
                <Border
                    Margin="0,38,0,0" CornerRadius="0, 0, 10, 10" Background="#E1E1E1" RenderTransformOrigin="0.499,0.488">
                    <Grid
                        Grid.ColumnSpan="2">
                        <Grid.Resources
            >
                            <Style
                                x:Key="InfoNumber" TargetType="{x:Type TextBlock}">
                                <Setter
                                    Property="FontFamily" Value="{StaticResource nunito}"/>
                                <Setter
                                    Property="FontSize" Value="30"/>
                                <Setter
                                    Property="FontWeight" Value="Bold"/>
                                <Setter
                                    Property="Foreground" Value="Black"/>
                                <Setter
                                    Property="HorizontalAlignment" Value="Center"/>


                            </Style>
                            <Style
                                x:Key="InfoLabel" TargetType="{x:Type TextBlock}">
                                <Setter
                                    Property="FontFamily" Value="{StaticResource nunito}"/>
                                <Setter
                                    Property="Foreground" Value="Black"/>
                                <Setter
                                    Property="FontWeight" Value="Bold"/>
                                <Setter
                                    Property="HorizontalAlignment" Value="Center"/>
                                <Setter
                                    Property="TextAlignment" Value="Center"/>
                                <Setter
                                    Property="Margin" Value="0,5,0,0"/>


                            </Style>


                        </Grid.Resources>
                        <Grid.RowDefinitions
            >
                            <RowDefinition
                                Height="4*"/>
                            <RowDefinition
                                Height="21*"/>
                            <RowDefinition
                                Height="25*"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions
            >
                            <ColumnDefinition
                                Width="*"/>
                            <ColumnDefinition
                                Width="*"/>
                            <ColumnDefinition
                                Width="*"/>
                        </Grid.ColumnDefinitions>
                        <!-- ... Lanjutkan binding untuk semua metrik info lainnya ... -->
                        <!-- ROW 0, COL 0: TOTAL WAKTU AKTIF (HARI) -->
                        <StackPanel
                            VerticalAlignment="Top" Grid.Row="1" Margin="0,4,0,0" Grid.Column="0">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalWaktuAktifHari}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL WAKTU AKTIF (HARI)"/>


                        </StackPanel>
                        <!-- ROW 0, COL 1: TOTAL JARAK BERLAYAR (KM) -->
                        <StackPanel
                            VerticalAlignment="Top" Grid.Row="1" Margin="0,4,0,0" Grid.Column="1">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalJarakBerlayarKM}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL JARAK BERLAYAR (KM)"/>


                        </StackPanel>
                        <!-- ROW 1, COL 0: TOTAL JUMLAH BERLAYAR -->
                        <StackPanel
                            VerticalAlignment="Center" Grid.Row="2" Grid.Column="0">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalJumlahBerlayar}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL JUMLAH BERLAYAR"/>


                        </StackPanel>
                        <StackPanel
                            VerticalAlignment="Center" Grid.Row="2" Grid.Column="1">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalJarakBerlayarKM}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL JARAK BERLAYAR (KM)"/>


                        </StackPanel>
                        <StackPanel
                            VerticalAlignment="Top" Grid.Row="1" Margin="0,4,0,0" Grid.Column="2">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalJarakBerlayarKM}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL JARAK BERLAYAR (KM)"/>


                        </StackPanel>
                        <StackPanel
                            VerticalAlignment="Center" Grid.Row="2" Grid.Column="2">
                            <TextBlock
                                Style="{StaticResource InfoNumber}" Text="{Binding CurrentNelayan.TotalJarakBerlayarKM}"/>
                            <TextBlock
                                Style="{StaticResource InfoLabel}" Text="TOTAL JARAK BERLAYAR (KM)"/>


                        </StackPanel>


                    </Grid>


                </Border>
            </Grid>
            <!-- Kanan: DATA LENGKAP & INFO -->
        </Grid>
    </Grid>
</Window>
